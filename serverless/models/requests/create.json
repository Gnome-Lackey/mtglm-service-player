{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "CreatePlayerSchema",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "title": "PlayerName"
    },
    "totalWins": {
      "type": "integer",
      "title": "PlayerTotalWins"
    },
    "totalLosses": {
      "type": "integer",
      "title": "PlayerTotalLosses"
    },
    "matches": {
      "type": "array",
      "title": "PlayerMatchIds",
      "items": {
        "type": "string",
        "title": "PlayerMatchId"
      }
    }
  }
}
