{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "PlayerResponseSchema",
  "required": ["id", "name", "userName", "email"],
  "properties": {
    "id": {
      "type": "string",
      "title": "PlayerId"
    },
    "name": {
      "type": "string",
      "title": "PlayerName"
    },
    "userName": {
      "type": "string",
      "title": "PlayerUserName"
    },
    "email": {
      "type": "string",
      "title": "PlayerEmail"
    },
    "epithet": {
      "type": "string",
      "title": "PlayerEpithet"
    },
    "favoriteColors": {
      "type": "array",
      "title": "PlayerFavoriteColors",
      "items": {
        "type": "string"
      }
    }
  }
}
