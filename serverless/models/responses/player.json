{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "PlayerResponseSchema",
  "properties": {
    "id": {
      "type": "string",
      "title": "PlayerId",
      "pattern": "^[a-zA-Z0-9-]+$"
    },
    "name": {
      "type": "string",
      "title": "PlayerName",
      "pattern": "^[a-zA-Z0-9-'_ ]+$"
    },
    "userName": {
      "type": "string",
      "title": "PlayerUserName",
      "pattern": "^[a-zA-Z0-9-'_ ]+$"
    },
    "email": {
      "type": "string",
      "title": "PlayerEmail",
      "pattern": "^[a-zA-Z0-9-'_ ]+$"
    },
    "totalWins": {
      "type": "integer",
      "title": "PlayerTotalWins",
      "pattern": "^[a-zA-Z0-9-'_ ]+$"
    },
    "totalLosses": {
      "type": "integer",
      "title": "PlayerTotalLosses"
    },
    "accountType": {
      "type": "integer",
      "title": "PlayerAccountType"
    },
    "isFirstTimeLogin": {
      "type": "boolean",
      "title": "PlayerIsFirstTimeLogin"
    }
  }
}
